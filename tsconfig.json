{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@myapp/components/*": ["components/*"],
      "@myapp/features/*": ["features/*"],
      "@myapp/navigation/*": ["navigation/*"],
      "@myapp/hooks/*": ["hooks/*"],
      "@myapp/utils/*": ["utils/*"],
      "@myapp/assets/*": ["assets/*"],
      "@myapp/store/*": ["store/*"],
      "@myapp/i18n/*": ["i18n/*"]
    }
  }
}
